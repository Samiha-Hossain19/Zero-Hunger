@model Samiha.EF.Restaurant_Table

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <div class="form-horizontal" >
        <h4>Restaurant Information</h4>
        

        <div class="form-group" >
            Restaurant ID:
            <div class="col-md-10"  >
                @Html.EditorFor(model => model.Restaurant_ID, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>
        </div>

        <div class="form-group" >
            Restaurant Name:
            <div class="col-md-10">
                @Html.EditorFor(model => model.Restaurant_Name, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>
        </div>

        <div class="form-group" >
            Address:
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>
        </div>

        <div class="form-group" >
            Contact:
            <div class="col-md-10">
                @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>
        </div>

        <div class="form-group" >
                <input type="submit" value="Create" class="btn btn-info" /> 
        </div>
    </div>
}

<div>

    <a class="btn btn-info" href="/Restaurant/Index">Back to List</a>
</div>


